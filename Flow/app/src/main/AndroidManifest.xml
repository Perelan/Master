<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sensordroid.flow">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sensordroid.flow.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.sensordroid.flow.Receivers.StartReceiver">
            <intent-filter>
                <action android:name="com.sensordroid.START" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.sensordroid.flow.Receivers.StopReceiver"
                  android:enabled="true"
                  android:exported="true">
            <intent-filter>
                <action android:name="com.sensordroid.STOP" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.sensordroid.flow.Receivers.RespondReceiver"
                  android:enabled="true"
                  android:exported="true">
            <intent-filter>
                <action android:name="com.sensordroid.HELLO" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.sensordroid.flow.WrapperService"
            android:exported="false" />

        <service
            android:name=".Handlers.CommunicationHandler"
            android:enabled="true" />

    </application>

</manifest>
