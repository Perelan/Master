<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sensordroid.ripple.RippleEffect
        android:id="@+id/ripple"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rb_radius="32dp">

        <ImageView
            android:id="@+id/test"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/flow"
            android:text="--\n--"/>

        <TextView
            android:id="@+id/sensor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif"
            android:text="OarZpot "
            android:textSize="52sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sensor_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sensor_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="E7:B4:33:F2:ED:52"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/sensor_battery"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/test"
            android:layout_alignBottom="@+id/test"
            android:layout_centerInParent="true"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="-22dp"
            android:text="--"
            android:textAlignment="center"/>
    </com.sensordroid.ripple.RippleEffect>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sensor_button"
        android:layout_width="200dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:elevation="5dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardCornerRadius="30dp"
        card_view:cardElevation="5dp"
        card_view:layout_constraintBottom_toTopOf="@+id/sensor_firmware"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.497"
        card_view:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="DISCONNECT"
            android:textColor="@android:color/background_light"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/sensor_firmware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:text="Firmware:  --"
        android:textAllCaps="false"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/sensor_state_indicator"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/corners"
        app:layout_constraintBottom_toTopOf="@+id/sensor_button"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/sensor_state"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:text="Connected"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/sensor_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/sensor_state_indicator"/>


</android.support.constraint.ConstraintLayout>